{% extends '::layout.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-md-3">
            {% if form_errors(form.title) %}
                <div class="alert alert-danger" role="alert">
                    {{ form_errors(form.title, {'attr': {'class': 'alert alert-danger', 'role':'alert' }} ) }}
                </div>
            {% endif %}
            {% if form_errors(form.url) %}
                <div class="alert alert-danger" role="alert">
                    {{ form_errors(form.url, {'attr': {'class': 'alert alert-danger', 'role':'alert' }} ) }}
                </div>
            {% endif %}
        </div>
        <div class="col-md-6">
            <form action="{{ path('video_edit', {'video_id': video.id }) }}" {{ form_enctype(form) }} method="POST" class="form-horizontal">
                <div class="form-group">

                    <div class="col-sm-10">
                        {{ form_widget(form.title, {'attr': {'class': 'form-control', 'id':'title' }}) }}
                    </div>
                    <label for="title" class="col-sm-2 control-label">حط تيتر</label>
                </div>
                <div class="form-group">

                    <div class="col-sm-10">
                        {{  form_widget(form.url, {'attr': {'class': 'form-control', 'id':'content' }}) }}
                    </div>
                    <label for="content" class="col-sm-2 control-label">حط ليان يوتيوب</label>
                </div>
                {{ form_widget(form._token)}}
                <div class="form-group">
                    <div class="col-sm-offset-0 col-sm-10">
                        <input type="submit" value="submit" class="btn btn-primary btn-lg btn-block" />
                    </div>
                </div>
            </form>
        </div>
        {{ form_errors(form) }}
    </div>
{% endblock %}
{% block foot_javascripts %}
    <script type="text/javascript">
        if (typeof(Yamli) == "object" && Yamli.init( { uiLanguage: "fr" , startMode: "offOrUserDefault" } ))
        {
            Yamli.yamlify("tafrika_postbundle_editvideo_title", { settingsPlacement: "inside" } );
        }
    </script>
{% endblock %}