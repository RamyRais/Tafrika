{% extends '::layout.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-md-3">
            {% if form_errors(form.title) %}
            <div class="alert alert-danger" role="alert">
                {{ form_errors(form.title, {'attr': {'class': 'alert alert-danger', 'role':'alert' }} ) }}
            </div>
            {% endif %}
            {% if form_errors(form.file) %}
            <div class="alert alert-danger" role="alert">
                {{ form_errors(form.file, {'attr': {'class': 'alert alert-danger', 'role':'alert' }} ) }}
            </div>
            {% endif %}
        </div>
        <div class="col-md-6">
            <form action="{{ path('image_add') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal">
                <div class="form-group">

                    <div class="col-sm-10">
                        {{ form_widget(form.title, {'attr': {'class': 'form-control', 'id':'title' }}) }}
                    </div>
                    <label for="title" class="col-sm-2 control-label">تيتر</label>
                </div>
                <div class="form-group">

                    <div class="col-sm-10">
                        {{  form_widget(form.file, {'attr': {'id':'file' }}) }}
                    </div>
                    <label for="file" class="col-sm-2 control-label">تصوير</label>
                </div>
                <div class="form-group">
                    <div class="col-sm-10">
                        <div class="row">
                            <div class="col-sm-11"></div>
                            <div class="col-sm-1">
                                <div class="checkbox">
                                    <label>
                                        {{ form_widget(form.NSFW, {'attr': {'id':'NSFW'}}) }}
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <label for="NSFW" class="col-sm-2 control-label">-18</label>
                </div>
                {{ form_widget(form._token)}}
                <div class="form-group">
                    <div class="col-sm-offset-0 col-sm-10">
                        <input type="submit" value="submit" class="btn btn-primary btn-lg btn-block" />
                    </div>
                </div>
            </form>
        </div>
        {{ form_errors(form) }}
    </div>
{% endblock %}