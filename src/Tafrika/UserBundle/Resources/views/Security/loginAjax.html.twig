<link rel="stylesheet" type="text/css" href="{{ asset('css/popup_login.css') }}">
<div class="container-fluid">
    <div class="row">
<div  id="login-modal" >
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header login_modal_header">
                <button id="close-popup-button" type="button" class="close">&times;</button>
                <h2 class="modal-title" id="myModalLabel">مرحبا زارتنا البركة</h2>
            </div>
            <div class="modal-body login-modal">
                <div class="clearfix"></div>
                <div id='social-icons-conatainer'>
                    <div class='modal-body-left'>
                        <form id="login_form" action="{{ path("fos_user_security_check") }}" method="POST">
                            <div class="form-group">
                                <input type="text" id="username" placeholder="المفرك  / username" value="{{ last_username }}"
                                       name="_username" required="required" class="form-control login-field">
                                <i class="fa fa-user login-field-icon"></i>
                            </div>
                            <div class="form-group">
                                <input type="password" id="login-pass" placeholder="كلمة السر / Password"
                                       name="_password" class="form-control login-field">
                                <i class="fa fa-lock login-field-icon"></i>
                            </div>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                            <input id="ajax_login" type="submit" value="submit" class="btn btn-primary modal-login-btn">
                        </form>
                        <br>

                        <div id="login_error_msg" class="alert alert-danger" role="alert" style="display: none;
                        font-size: 13px;">
                            ثبت يرحم بوك فالمفرك ولا كلمة السر
                        </div>
                        <br>
                        <a href="{{ path('fos_user_resetting_request') }}" class=" text-center">
                            Lost your password / نسيت كلمة السر
                        </a>
                    </div>

                    <div class='modal-body-right'>
                        <div class="modal-social-icons">
                            {% for owner in hwi_oauth_resource_owners() %}
                                <a class="btn btn-social {{ owner | trans({}, 'HWIOAuthBundle') }}"
                                 {#btn-{{ owner | trans({}, 'HWIOAuthBundle') }}-plus"#}
                                   href="{{ hwi_oauth_login_url(owner) }}">
                                    <i class="fa fa-{{ owner | trans({}, 'HWIOAuthBundle') }}
                                        fa-{{ owner | trans({}, 'HWIOAuthBundle') }}-plus" >
                                    </i>{{ owner | trans({}, 'HWIOAuthBundle') }} كونكتي بل
                                </a>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>

                <div class="form-group modal-register-btn">
                    <a href="{{ path('fos_user_registration_register') }}" class="btn btn-default">أعمل بروفيل </a>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="modal-footer login_modal_footer">
            </div>
        </div>
    </div>
</div>
            </div>
            </div>
            </div>
