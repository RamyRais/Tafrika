{% extends "::layout.html.twig" %}
{% block title %}
    Reset Password
{% endblock title %}
{% block body %}
<form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }}
              method="POST" class="fos_user_resetting_reset form-horizontal">
    {% for passwordField in form.plainPassword %}
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-7">
                <div class="form-group">
                    {{ form_label(passwordField,null, {'label_attr': {'class': 'col-sm-2 control-label' }}) }}
                    <div class="col-sm-10">
                        {{ form_widget(passwordField, {'attr': {'class': 'form-control' }}) }}
                    </div>

                </div>
            </div>
            <div class="col-md-3">
                {% if form_errors(passwordField) %}
                    <div class="alert alert-danger" role="alert">
                        {{ form_errors(passwordField, {'attr': {'class': 'alert alert-danger', 'role':'alert' }} ) }}
                    </div>
                {% endif %}
            </div>
        </div>
    {% endfor %}
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-7">
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="submit" value="submit" class="btn btn-primary btn-lg btn-block" />
                </div>
            </div>
        </div>
    </div>
    {{ form_widget(form._token) }}
    {{ form_errors(form) }}
</form>
