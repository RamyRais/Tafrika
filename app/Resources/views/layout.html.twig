<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" type="text/css" />
    <link rel="stylesheet" href="{{ asset('css/main_style.css') }}" type="text/css" />
    <link rel="stylesheet" href="{{ asset('css/bootstrap-social.css') }}" type="text/css" />
    <link rel="stylesheet" href="{{ asset('css/font-awesome.min.css') }}" type="text/css" />
    <link rel="stylesheet" href="{{ asset('css/bootstrap-toggle.min.css')}}" >
    <link rel="stylesheet" href="{{ asset('css/magnific-popup.css')}}" >
    {% block stylesheets %}{% endblock %}
    <script src="{{ asset('js/jquery-1.11.1.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
    {% block head_javascripts %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>
<div id="element_to_pop_up" style="display:none;">Content of popup</div>
{% block body_javascripts %}{% endblock %}
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand navbar-right" href="#">تفريكة</a>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-left">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                            <span class="fa fa-caret-down"></span>
                            {% if app.user %}
                                {{ app.user.username }} <img class="img-circle" src="{{ app.user.email|getGravatarImage(20)}}" >
                            {% else %}
                                المُفَرِكْ <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                            {% endif %}

                        </a>

                        <ul class="dropdown-menu" role="menu">
                            {% if app.user %}
                            <li><a href="{{ path('fos_user_profile_show') }}">بروفيلي <i class="fa fa-home"></i></a></li>
                            <li><a href="{{ path('fos_user_security_logout') }}"> أَنِسْتو <i class="fa fa-sign-out"></i></a></li>
                            {% else %}
                            <li><a id="login_button" href="{{ path('fos_user_security_login') }}"> تفَضِل بحْذانا <i class="fa fa-sign-in"></i></a></li>
                            <li><a href="{{ path('fos_user_registration_register') }}">أعمل بروفيل <i class="fa fa-user-plus"></i></a></li>
                            {% endif %}
                        </ul>
                    </li>
                    <li>
                        <a>قِلة حياء <input id="toggle-event" type="checkbox" data-toggle="toggle"
                                  data-size="mini" data-onstyle="danger" data-offstyle="success"
                                    path="{{ path('nsfw_change') }}"
                            {% if app.session.get('nsfw') != 1 %}
                                checked
                            {% endif %}
                        ></a>
                    </li>
                </ul>
                <ul class="nav navbar-nav  navbar-right">
                    {% if app.user %}
                        <li><a href="{{ path('load_followed_posts') }}">شوف شِلّة</a></li>
                    {% endif %}
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">تحميل
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="{{ path('status_add') }}">فاش تخمم <i class="fa fa-pencil"></i></a></li>
                            <li><a href="{{ path('image_add') }}">تصويرة <i class="fa fa-picture-o"></i></a></li>
                            <li><a href="{{ path('video_add') }}">فيديو <i class="fa fa-video-camera"></i></a></li>
                        </ul>
                    </li>
                    <li><a href="{{ path('tafrika_freshk') }}">فرِشِك</a></li>
                    <li><a href="{{ path('tafrika_index') }}">لمَمُو</a></li>
                </ul>
                <ul class="nav navbar-nav">

                </ul>
            </div>
        </div>
    </nav>

<div class="container-fluid">
    </br></br></br></br>
    {% block body %}{% endblock %}
</div>
<a id="hidden_login_link"  href="{{ path('fos_user_security_login') }}" style="display: none;"></a>
<script src="{{ asset('js/bootstrap-toggle.min.js') }}"></script>
<script src="{{ asset('js/jquery.magnific-popup.js') }}"></script>
<script src="{{ asset('js/nsfw.js') }}"></script>
<script src="{{ asset('js/popupLogin.js') }}"></script>
<script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
<script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
<script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-61311876-1', 'auto');
    ga('send', 'pageview');

</script>
<div id="fb-root"></div>
<script src="{{ asset('js/FB_partage.js') }}"></script>
<!-- YAMLI CODE START -->
<script type="text/javascript" src="http://api.yamli.com/js/yamli_api.js"></script>

<!-- YAMLI CODE END -->
{% block foot_javascripts %}

{% endblock %}
</body>
</html>
